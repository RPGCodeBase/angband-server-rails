    <div class="panel-group" id="accordion">
        <% for row in @params["events"] %>
            <div class="panel panel-default">
                <a data-toggle="collapse" data-parent="#accordion" href="#collapse<%= row["id"] %>">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-8">
                                <%= row["title"] %>
                            </div>
                            <div class="hidden-xs col-sm-3 col-md-3 col-lg-2">
                                <font size=-2><%= row["location_name"] %><br>
                                <%= raw row["objects"].map { |x| link_to(x["name"], { :action => "object", :id => x["id"] }) }.join(", ") %></font>
                            </div>
                            <div class="hidden-xs col-sm-3 col-md-3 col-lg-2">
                                <font size=-2>
                                    <span style="white-space:nowrap;">
                                        <%= row["cr_name"] %>,&nbsp;<span class="timestamp"><%= row["cr_date"] %></span>
                                    </span><br>
                                    <span style="white-space:nowrap;">
                                        <% color = (row["cr_date"] == row["up_date"])? "green": "red" %>
                                        <font color=<%= color %>>
                                            <%= row["up_name"] %>,&nbsp;<span class="timestamp"><%= row["up_date"] %></span>
                                        </font>
                                    </span>
                                </font>
                            </div>
                        </div>
                    </div>
                </a>
                <div id="collapse<%= row["id"] %>" class="panel-collapse collapse">
                    <ul class="list-group">
                        <% if row["descr_len"].to_i > 0 %>
                            <li class="list-group-item"><%= row["description"] %></li>
                        <% end %>
                        <li class="list-group-item hidden-sm hidden-md hidden-lg"><font size=-2>Локация: <%= row["location_name"] %></font></li>
                        <li class="list-group-item hidden-sm hidden-md hidden-lg"><font size=-2>Объекты: <%= raw row["objects"].map { |x| link_to(x["name"], { :action => "object", :id => x["id"] }) }.join(", ") %></font></li>
                        <li class="list-group-item hidden-sm hidden-md hidden-lg">
                            <font size=-2>
                                <span style="white-space:nowrap;">
                                    <%= row["cr_name"] %>,&nbsp;<span class="timestamp"><%= row["cr_date"] %></span>
                                </span><br>
                                <span style="white-space:nowrap;">
                                    <% color = (row["cr_date"] == row["up_date"])? "green": "red" %>
                                    <font color=<%= color %>>
                                        <%= row["up_name"] %>,&nbsp;<span class="timestamp"><%= row["up_date"] %></span>
                                    </font>
                                </span>
                            </font>
                        </li>
                    </ul>
                </div>
            </div>
        <% end %>
    </div> 

